extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Create New Party

        form(action='/parties', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          input(type='hidden', name='user', value='test@example.com')
          .form-group
            label.control-label Name
            input(type='text', name='name', placeholder='Name', required).form-control
          button(type='submit').btn.btn-lg.btn-primary.btn-block Create New Party
