
//- # song - new

extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h2 Add a Song:
        form(action='/parties/' + '54f8960aff1932f0230ef94e' + '/songs', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          input(type='hidden', name='partyId', value='54f8960aff1932f0230ef94e')
          .form-group
            label.control-label Genre
            input(type='text', name='genre', placeholder='ex. My favorite song', required).form-control
          .form-group
            label.control-label Title
            input(type='text', name='title', placeholder='Song title', required).form-control
          .form-group
            label.control-label Artist
            input(type='text', name='artist', placeholder='Artist name' required).form-control
          button(type='submit').btn.btn-lg.btn-primary.btn-block Add Song
