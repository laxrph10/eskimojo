
//- # song - new

extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h2 Add a Song:
        form(action='/songs', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          .form-group
            label.control-label Label
            input(type='text', name='name', placeholder='ex. My favorite song', required).form-control
          .form-group
            label.control-label Title
            input(type='text', name='title', placeholder='song title', required).form-control
          .form-group
            label.control-label Artist
            input(type='text', name='artist', placeholder='artist name' required).form-control
          button(type='submit').btn.btn-lg.btn-primary.btn-block Add Song
